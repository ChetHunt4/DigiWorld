<Window x:Class="DigiWorldBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigiWorldBuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New World" />
                <MenuItem Header="_Open World"/>
                <Separator />
                <MenuItem Header="_Save World" IsEnabled="False" />
                <MenuItem Header="_Save World As..." IsEnabled="False" />
                <Separator />
                <MenuItem Header="_Quit" Click="menuItem_QuitClick"/>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" MinWidth="120" MinHeight="600" HorizontalAlignment="Left">
                <StackPanel x:Name="pnlNew" Orientation="Vertical">
                    <Label Content="New World" />
                    <Button Content="Load Color Image..." x:Name="btnLoadColor"/>
                    <Label Content="Filename..." x:Name="lblColorFile" />
                    <Button Content="Load Fresh Water Map..." IsEnabled="False" x:Name="btnLoadFresh" />
                    <Label Content="Select Color Channel..." />
                    <ComboBox x:Name="cmbFreshChannel" IsEnabled="False">
                        <ComboBoxItem Content="R"/>
                        <ComboBoxItem Content="G" />
                        <ComboBoxItem Content="B" />
                    </ComboBox>
                    <Label Content="Filename..." x:Name="lblFreshWaterFile" />
                    <Button Content="Load Ocean Water Map..." IsEnabled="False" x:Name="btnLoadOcean"/>
                    <Label Content="Select Color Channel..." />
                    <ComboBox x:Name="cmbOceanChannel" IsEnabled="False">
                        <ComboBoxItem Content="R"/>
                        <ComboBoxItem Content="G" />
                        <ComboBoxItem Content="B" />
                    </ComboBox>
                    <Label Content="Filename..." x:Name="lblOceanWaterFile" />
                    <Button Content="Create Resource..." x:Name="btnResource" />
                </StackPanel>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom">
                <Button Content="Color" IsEnabled="False"></Button>
                <Button Content="Water" IsEnabled="False"></Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Ocean" HorizontalAlignment="Center" IsEnabled="False"/>
                    <Button Content="Fresh" HorizontalAlignment="Center" IsEnabled="False"/>
                </StackPanel>
                <Label Content="Resources" HorizontalAlignment="Center" />
                <ComboBox x:Name="cmbResources" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Image x:Name="iImage" MinWidth="200" MinHeight="200" Stretch="UniformToFill"></Image>
        </StackPanel>
    </DockPanel>
</Window>
